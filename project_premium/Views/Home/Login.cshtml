@{
    ViewBag.Title = "Admin Login";
}

<style>


    h2 {
        text-align: center;
        color: #333;
    }

    label {
        margin-top: 10px;
        display: block;
        color: #555;
    }

    input[type="text"], input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    input[type="submit"] {
        background-color: #28a745;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        margin-top: 15px;
    }

        input[type="submit"]:hover {
            background-color: #218838;
        }

    .error-message {
        color: red;
        margin-top: 10px;
        text-align: center;
    }
</style>

<div class="container">
    <h2>Admin Login</h2>

    @using (Html.BeginForm())
    {
        @Html.Label("Username")
        @Html.TextBox("username", null, new { @class = "form-control" })

        @Html.Label("Password")
        @Html.Password("password", null, new { @class = "form-control" })

        <input type="submit" value="Login" />

        if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">@ViewBag.ErrorMessage</div>
        }
    }
</div>
