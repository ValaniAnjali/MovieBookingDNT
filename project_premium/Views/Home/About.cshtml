@{
    ViewBag.Title = "About";
    ViewBag.Message = "Learn more about avmovies!";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
        line-height: 1.5;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #007bff;
    }

    .content {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    p {
        color: #555;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<main aria-labelledby="title" class="content">
    <h2 id="title">@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>

    <p>At avmovies, we are passionate about bringing you the best in movie entertainment. Our mission is to provide high-quality services that cater to your needs and elevate your viewing experience.</p>

</main>

<p>Using: partial view.</p>
<!-- Rendering the partial view -->
@Html.Partial("_AboutDetails", "This is additional text passed to the partial view.")
