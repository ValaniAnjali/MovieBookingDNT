@model project_premium.Models.Movie
@{
    ViewBag.Title = "Add New Movie";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Add New Movie</h2>
    @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Movie Name")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ReleaseDate, "Release Date")
            @Html.TextBoxFor(m => m.ReleaseDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description, "Description")
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.Label("Image")
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success mt-3">Save Movie</button>
    }
</div>
